FROM wurstmeister/zookeeper
LABEL maintainer="Asish Tom"
ENV   KAFKA_BROKER_ID: 1
ENV      KAFKA_CREATE_TOPICS: 'albumNotification:1:1' # topic:partition:replicas
ENV      KAFKA_DELETE_TOPIC_ENABLE: 'true'
ENV      KAFKA_ZOOKEEPER_CONNECT: 'zookeeper:2181'
ENV     KAFKA_AUTO_CREATE_TOPICS_ENABLE: 'true'
ENV      KAFKA_MESSAGE_MAX_BYTES: 200000000
ENV      KAFKA_ADVERTISED_LISTENERS: INSIDE://kafka:9092,OUTSIDE://localhost:9094
ENV      KAFKA_LISTENERS: INSIDE://:9092,OUTSIDE://:9094
ENV      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: INSIDE:PLAINTEXT,OUTSIDE:PLAINTEXT
ENV      KAFKA_INTER_BROKER_LISTENER_NAME: INSIDE